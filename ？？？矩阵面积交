#include<bits/stdc++.h>
using namespace std;
 
int main()
{
     double x[4],y[4];
     scanf("%lf%lf%lf%lf%lf%lf%lf%lf",&x[0],&y[0],&x[1],&y[1],&x[2],&y[2],&x[3],&y[3]);
     sort(x,x+2);
     sort(x+2,x+4);
     sort(y,y+2);
     sort(y+2,y+4);    
     if(x[0]>x[3]||x[1]<x[2]||y[0]>y[3]||y[1]<y[2])
     {
         printf("0.00\n");
     }else{
         sort(x,x+4);
         sort(y,y+4);
         printf("%.2lf\n",(x[2]-x[1])*(y[2]-y[1]));
     }
     return 0;
} 

//这是个天才！！！！！（震声
