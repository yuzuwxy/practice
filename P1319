#include<bits/stdc++.h>
using namespace std;

int tu[210][210];
int n;

int main() {
	//int cnt=0;
	int k=0;
	bool flag=1;
	scanf("%d",&n);
	int sum=0;
	while(sum<n*n) {
		int x;
		scanf("%d",&x);
		sum+=x;
		flag=!flag;                   //ture和false互转
		for(int j=1;j<=x;j++) {
			k++;
			printf("%d",flag);                 //printf输出bool型变量以整型的形式输出
			if(k%n==0) printf("\n");
		}
	}
	return 0;
}


续集篇：
#include<bits/stdc++.h>
using namespace std;
int main() {
	char c,a='0';
	int num[40010],i=1;
	memset(num,0,sizeof(num));
	int tot=0;
//	for(int i=0;i<s.length();i++) 
	while(cin>>c) {
		tot++;
		if(a==c) {
			num[i]++;
		}
		else {
//			printf("%d ",num);
			a=c;
			num[++i]++;
		}
	}
	printf("%d ",sqrt(tot));
	for(int j=1;j<=i;j++) {
		printf("%d ",num[i]);
	}
	printf("\n");
	return 0;
}

#include<bits/stdc++.h>
using namespace std;
int main() {
	vector<string> ju;
	string s;
	while(cin>>s) {
		ju.push_back(s);
	}
	printf("%d ",ju.size());
	s.clear();
	for(int i=0;i<ju.size();i++) {
		s+=ju[i];
	}
	char a='0';
	int num=0;
	for(int i=0;i<s.length();i++) {
		if(a==s[i]) {
			num++;
		}
		else {
			printf("%d ",num);
			a=s[i];
			num=0;
		}
	}
	printf("\n");
	return 0;
}

两个代码，类似的输入方式，输进去出不来东西
